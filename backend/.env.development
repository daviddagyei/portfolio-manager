# Backend Database Configuration
DATABASE_URL=sqlite:///./portfolio_manager.db

# Security Settings
SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Settings
DEBUG=true
TESTING=false

# CORS Settings
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:3030", "http://127.0.0.1:3000", "http://127.0.0.1:3030"]

# External APIs
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key
YAHOO_FINANCE_ENABLED=true

# Cache Settings
CACHE_TTL=3600

# Pagination
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=1000
